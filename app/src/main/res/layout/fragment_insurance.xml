            android:layout_below="@+id/artin"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Mitglied"
            android:id="@+id/alsin"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/als"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Besondere Personengruppe:"
            android:id="@+id/bes"
            android:textColor="#FF999999"   />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bes"
            android:layout_below="@+id/alsin"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"

            android:id="@+id/besin"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bes"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="DMP-Kennung:"
            android:id="@+id/dmp"
            android:textColor="#FF999999"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dmp"
            android:layout_below="@+id/besin"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Asthma bronchiale"
            android:id="@+id/dmpin"/>


    </RelativeLayout>

</FrameLayout>
