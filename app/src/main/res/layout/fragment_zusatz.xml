<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackathon.comfortmobile.ZusatzFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="@+name/containerDetail"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="Jan Zischler"
            android:maxLines="1"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/gender"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/name"
            android:src="@drawable/maennlich2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthday"
            android:text="03.04.1989 (28)      K"
            android:layout_marginLeft="50dp"

            android:layout_toRightOf="@id/gender"
            android:maxLines="1"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nummer"
            android:text="Nr: 12"

            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:textSize="25sp"
            android:layout_marginRight="20dp"/>

        <View android:id="@+id/sep"
            android:background="#FF999999"
            android:layout_width = "match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sep"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Vertragsteilnehmer:"
            android:id="@+id/kname"
            android:textColor="#FF999999"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kname"
            android:layout_below="@+id/sep"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Nein"
            android:id="@+id/kassein"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kname"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Impfstatus:"
            android:id="@+id/kenn"
            android:textColor="#FF999999"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kenn"
            android:layout_below="@+id/kassein"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Überfällig"
            android:id="@+id/kennin"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kenn"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:text="Info-/Memofeld:"
            android:id="@+id/unter"
            android:textColor="#FF999999"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/unter"
            android:layout_below="@+id/kennin"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:maxLines="2"
            android:textSize="25sp"
            android:text="Der Patient kommt überwiegend aufgrund von Asthma in die Praxis, um seine Rezepte abzuholen"
            android:id="@+id/gruppein"/>


    </RelativeLayout>

</FrameLayout>
